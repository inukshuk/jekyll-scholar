  gem 'cucumber'
  gem 'rake'
  gem 'redcarpet'
  gem 'redgreen'
  gem 'shoulda'
  gem 'test-unit'
  gem 'unicode_utils' if RUBY_VERSION < '2.4'
end

group :extra do
  gem 'listen'
end

group :coverage do
  gem 'simplecov', :require => false
end

group :debug do
  gem 'debug', '>= 1.0.0', :require => false
end
